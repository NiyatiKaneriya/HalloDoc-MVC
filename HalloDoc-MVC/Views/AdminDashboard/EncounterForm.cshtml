@model HalloDoc_DAL.ViewModels.AdminViewModels.EncounterModel
<section class="container-fluid w-75 my-5">
    <div class="d-flex justify-content-between m-2">
        <h2>Encounter Form </h2>
        <div>
            <a asp-action="Index" asp-controller="AdminDashboard" class="mx-5 btn btn-outline-info">
                <i class="fa-solid fa-angle-left"></i> back
            </a>
        </div>
    </div>
    <div class="card border-0 shadow">
        <form class="row  mx-3 my-3"  asp-controller="AdminDashboard" asp-action="SaveEncounterForm" asp-route-Requestid="Requestid"  method="post">
            
            <div class="col-12 mb-3 text-center">
                <h3 class="text-info fw-bolder">Medical Report-Confidential</h3>
            </div>
            <input asp-for="RequestId" hidden />
            
            <div class=" col-md-6 col-sm-12 mb-3">
                <div class="form-floating ">
                    <input asp-for="FirstName" type="text" class="form-control" id="FirstName" placeholder="First Name">
                    <label for="floatingInput" class="text-muted">First Name</label>
                </div>
            </div>
            <div class=" col-md-6 col-sm-12 mb-3">
                <div class="form-floating ">
                    <input  asp-for="LastName" type="text" class="form-control" id="LastName" placeholder="Last Name" >
                    <label for="floatingInput" class="text-muted">Last Name</label>
                </div>
            </div>
            <div class=" col-12 mb-3">
                <div class="form-floating ">
                    <input asp-for="Location" type="text" class="form-control" id="Location" placeholder="Location" >
                    <label for="floatingInput" class="text-muted">Location</label>
                </div>
            </div>
            <div class=" col-md-6 col-sm-12 mb-3">
                <div class="form-floating ">
                    <input asp-for="DOB"  id="DOB" class="form-control" type="date" placeholder="DOB"  />
                    <label for="floatingInput" class="text-muted">DOB</label>
                </div>
            </div>
            <div class=" col-md-6 col-sm-12 mb-3">
                <div class="form-floating ">
                    <input asp-for="DateOfService"  id="Date" class="form-control" type="date" placeholder="Date"  />
                    <label for="floatingInput" class="text-muted">Date</label>
                </div>
            </div>
            <div class=" col-md-6 col-sm-12 mb-3">
                <div class="form-floating mb-3">
                    <input asp-for="Phone"  id="phone" type="tel" class="form-control" >
                </div>
            </div>
            <div class=" col-md-6 col-sm-12 mb-3">
                <div class="form-floating ">
                    <input asp-for="Email"  id="Email" type="email" class="form-control"  placeholder="name@example.com" >
                    <label for="floatingInput" class="text-muted">Email</label>
                </div>
            </div>
            <div class=" col-md-6 col-sm-12 mb-3">
                <div class="form-floating">
                    <textarea asp-for="HistoryOfPresentIllnessOrInjury" class="form-control" placeholder="" id="floatingTextarea"
                              style="height: 100px" ></textarea>
                    <label for="floatingTextarea" class="text-muted">history of Present illeness Or injury </label>
                </div>
            </div>
            <div class=" col-md-6 col-sm-12 mb-3">
                <div class="form-floating">
                    <textarea asp-for="MedicalHistory" class="form-control" placeholder="" id="floatingTextarea"
                              style="height: 100px" ></textarea>
                    <label for="floatingTextarea" class="text-muted">Medical History </label>
                </div>
            </div>
            <div class=" col-md-6 col-sm-12 mb-3">
                <div class="form-floating">
                    <textarea asp-for="Medications" class="form-control" placeholder="" id="floatingTextarea"
                              style="height: 75px" ></textarea>
                    <label for="floatingTextarea" class="text-muted">Medications </label>
                </div>
            </div>
            <div class=" col-md-6 col-sm-12 mb-3">
                <div class="form-floating">
                    <textarea asp-for="Allergies" class="form-control" placeholder="" id="floatingTextarea"
                              style="height: 75px" ></textarea>
                    <label for="floatingTextarea" class="text-muted">Allergies </label>
                </div>
            </div>
            <div class=" col-md-4 col-sm-6 mb-3">
                <div class="form-floating">
                    <input asp-for="Temp" type="text" class="form-control" placeholder="">
                    <label for="floatingInput" class="text-muted">Temp</label>
                </div>
            </div>
            <div class=" col-md-4 col-sm-6 mb-3">
                <div class="form-floating">
                    <input asp-for="Hr" type="text" class="form-control" placeholder="">
                    <label for="floatingInput" class="text-muted">HR</label>
                </div>
            </div>
            <div class=" col-md-4 col-sm-6 mb-3">
                <div class="form-floating">
                    <input asp-for="Rr" type="text" class="form-control" placeholder="">
                    <label for="floatingInput" class="text-muted">RR</label>
                </div>
            </div>
            <div class=" col-md-2 col-sm-6 mb-3">
                <div class="form-floating">
                    <input asp-for="BloodPressureSystolic" type="text" class="form-control" placeholder="">
                    <label for="floatingInput" class="text-muted">Blood pressure(Systolic)</label>
                </div>
            </div>
            <div class=" col-md-2 col-sm-6 mb-3">
                <div class="form-floating">
                    <input asp-for="BloodPressureDiastolic" type="text" class="form-control" placeholder="">
                    <label for="floatingInput" class="text-muted ">Blood pressure(Diastolic)</label>
                </div>
            </div>
            <div class=" col-md-4 col-sm-6 mb-3">
                <div class="form-floating">
                    <input asp-for="O2" type="text" class="form-control" placeholder="">
                    <label for="floatingInput" class="text-muted">O2</label>
                </div>
            </div>
            <div class=" col-md-4 col-sm-6 mb-3">
                <div class="form-floating">
                    <input asp-for="Pain" type="text" class="form-control" placeholder="">
                    <label for="floatingInput" class="text-muted">Pain</label>
                </div>
            </div>
            <div class=" col-md-6 col-sm-12 mb-3">
                <div class="form-floating">
                    <textarea asp-for="Heent" class="form-control" placeholder="" id="floatingTextarea"
                              style="height: 75px" ></textarea>
                    <label for="floatingTextarea" class="text-muted">Heent </label>
                </div>
            </div>
            <div class=" col-md-6 col-sm-12 mb-3">
                <div class="form-floating">
                    <textarea asp-for="Cv" class="form-control" placeholder="" id="floatingTextarea"
                              style="height: 75px" ></textarea>
                    <label for="floatingTextarea" class="text-muted">CV </label>
                </div>
            </div>
            <div class=" col-md-6 col-sm-12 mb-3">
                <div class="form-floating">
                    <textarea asp-for="Chest" class="form-control" placeholder="" id="floatingTextarea"
                              style="height: 75px" ></textarea>
                    <label for="floatingTextarea" class="text-muted">Chest </label>
                </div>
            </div>
            <div class=" col-md-6 col-sm-12 mb-3">
                <div class="form-floating">
                    <textarea asp-for="Abd" class="form-control" placeholder="" id="floatingTextarea"
                              style="height: 75px" ></textarea>
                    <label for="floatingTextarea" class="text-muted">ABD </label>
                </div>
            </div>
            <div class=" col-md-6 col-sm-12 mb-3">
                <div class="form-floating">
                    <textarea asp-for="Extremeties" class="form-control" placeholder="" id="floatingTextarea"
                              style="height: 75px" ></textarea>
                    <label for="floatingTextarea" class="text-muted">Extr </label>
                </div>
            </div>
            <div class=" col-md-6 col-sm-12 mb-3">
                <div class="form-floating">
                    <textarea asp-for="Skin" class="form-control" placeholder="" id="floatingTextarea"
                              style="height: 75px" ></textarea>
                    <label for="floatingTextarea" class="text-muted">Skin </label>
                </div>
            </div>
            <div class=" col-md-6 col-sm-12 mb-3">
                <div class="form-floating">
                    <textarea asp-for="Neuro" class="form-control" placeholder="" id="floatingTextarea"
                              style="height: 75px" ></textarea>
                    <label for="floatingTextarea" class="text-muted">Neuro </label>
                </div>
            </div>
            <div class=" col-md-6 col-sm-12 mb-3">
                <div class="form-floating">
                    <textarea asp-for="Other" class="form-control" placeholder="" id="floatingTextarea"
                              style="height: 75px" ></textarea>
                    <label for="floatingTextarea" class="text-muted">Other </label>
                </div>
            </div>
            <div class=" col-md-6 col-sm-12 mb-3">
                <div class="form-floating">
                    <textarea asp-for="Diagnosis" class="form-control" placeholder="" id="floatingTextarea"
                              style="height: 75px" ></textarea>
                    <label for="floatingTextarea" class="text-muted">Diognosis </label>
                </div>
            </div>
            <div class=" col-md-6 col-sm-12 mb-3">
                <div class="form-floating">
                    <textarea asp-for="TreatmentPlan" class="form-control" placeholder="" id="floatingTextarea"
                              style="height: 75px" ></textarea>
                    <label for="floatingTextarea" class="text-muted">Treatment Plan </label>
                </div>
            </div>
            <div class=" col-md-6 col-sm-12 mb-3">
                <div class="form-floating">
                    <textarea asp-for="MedicationsDispensed" class="form-control" placeholder="" id="floatingTextarea"
                              style="height: 75px" ></textarea>
                    <label for="floatingTextarea" class="text-muted">Medications Dispensed </label>
                </div>
            </div>
            <div class=" col-md-6 col-sm-12 mb-3">
                <div class="form-floating">
                    <textarea asp-for="Procedures" class="form-control" placeholder="" id="floatingTextarea"
                              style="height: 75px" ></textarea>
                    <label for="floatingTextarea" class="text-muted">Procedures </label>
                </div>
            </div>
            <div class=" col-12 mb-3">
                <div class="form-floating ">
                    <input asp-for="FollowUp" type="text" class="form-control" placeholder="Followup">
                    <label for="floatingInput" class="text-muted">Followup</label>
                </div>
            </div>
            
            <div class="d-flex flex-row-reverse gap-2 m-3">
                <input class="btn btn-lg btn-outline-info" type="reset"  value="Cancel">
                @{
                    if (Model.IsFinalize == false)
                    {
                        <button type="submit" value="Finalize" asp-action="Finalize" asp-controller="AdminDashboard" class="btn btn-lg btn-dark btn-cancel ">Finalize</button>
                    }

                }
                @* <input class="btn btn-lg btn-dark" type="submit" id="finalizebtn"  value="Finalize"> *@
                   
                <input class="btn btn-lg btn-info" type="submit" id="savebtn"  value="Save Changes">
            </div>
            
        </form>
    </div>
</section>

