<partial name="../Shared/_PartialConfirmetionModel" />
    <div class="wrapper d-flex flex-column align-items-center pt-4">
        <div class="w-75 d-flex flex-row-reverse bg-white">
            <a asp-controller="Home" asp-action="submit_request_screen" class="text-decoration-none text-info ">
                <button type="button"
                        class="mx-5 btn btn-outline-info">
                    <i class="fa fa-solid fa-angle-left"></i> back
                </button>
            </a>
        </div>
    <form class="row bg-white shadow p-lg-4 p-md-3 p-sm-2 form-patient">
            <div class="col-12 mb-3">
                <h3>Family/Friend Information</h3>
            </div>
            <div class=" col-md-6 col-sm-12 mb-3">
                <div class="form-floating ">
                    <input type="text" class="form-control" id="floatingInput" placeholder="First Name">
                    <label for="floatingInput" class="text-muted">First Name</label>
                </div>
            </div>
            <div class=" col-md-6 col-sm-12 mb-3">
                <div class="form-floating ">
                    <input type="text" class="form-control" id="floatingInput" placeholder="Last Name">
                    <label for="floatingInput" class="text-muted">Last Name</label>
                </div>
            </div>
            <div class=" col-md-6 col-sm-12 mb-3 ">
                <div class="form-floating ">
                    <input id="phone-frd" type="tel" class="form-control " />
                </div>
            </div>
            <div class=" col-md-6 col-sm-12 mb-3">
                <div class="form-floating ">
                    <input type="email" class="form-control" id="floatingInput" placeholder="name@example.com">
                    <label for="floatingInput" class="text-muted">Email address</label>
                </div>
            </div>
            <div class="col-12 mb-3">
                <h3>Patient Information</h3>
            </div>
            <div class="col-12 mb-3">
                <div class="form-floating">
                    <textarea class="form-control" placeholder="Leave a comment here" id="floatingTextarea"
                              style="height: 100px"></textarea>
                    <label for="floatingTextarea" class="text-muted">Enter Brief Details of symptoms (optional) </label>
                </div>
            </div>
            <div class=" col-md-6 col-sm-12 mb-3">
                <div class="form-floating ">
                    <input type="text" class="form-control" id="floatingInput" placeholder="First Name">
                    <label for="floatingInput" class="text-muted">First Name</label>
                </div>
            </div>
            <div class=" col-md-6 col-sm-12 mb-3">
                <div class="form-floating ">
                    <input type="text" class="form-control" id="floatingInput" placeholder="Last Name">
                    <label for="floatingInput" class="text-muted">Last Name</label>
                </div>
            </div>
            <div class=" col-md-6 col-sm-12 mb-3">
                <div class="form-floating ">
                    <input id="startDate" class="form-control" type="date" placeholder="DOB" />
                    <label for="floatingInput" class="text-muted">DOB</label>
                </div>
            </div>
            <div class="col-12 mb-3">
                <h3>Patient Contact information</h3>
            </div>
            <div class=" col-md-6 col-sm-12 mb-3">
                <div class="form-floating ">
                    <input type="email" class="form-control" id="floatingInput" placeholder="name@example.com">
                    <label for="floatingInput" class="text-muted">Email address</label>
                </div>
            </div>
            <div class=" col-md-6 col-sm-12 mb-3 ">
                <div class="form-floating mb-3">
                    <input id="phone" type="tel" class="form-control " />
                </div>
            </div>
            <div class="col-12 mb-3">
                <h3>Patient Location</h3>
            </div>
            <div class=" col-md-6 col-sm-12 mb-3">
                <div class="form-floating ">
                    <input type="text" class="form-control" id="floatingInput" placeholder="Street">
                    <label for="floatingInput" class="text-muted">Street</label>
                </div>
            </div>
            <div class=" col-md-6 col-sm-12 mb-3">
                <div class="form-floating">
                    <input type="text" class="form-control" id="floatingInput" placeholder="City">
                    <label for="floatingInput" class="text-muted">City</label>
                </div>
            </div>
            <div class=" col-md-6 col-sm-12 mb-3">
                <div class="form-floating">
                    <input type="text" class="form-control" id="floatingInput" placeholder="State">
                    <label for="floatingInput" class="text-muted">State</label>
                </div>
            </div>
            <div class=" col-md-6 col-sm-12 mb-3">
                <div class="form-floating">
                    <input type="text" class="form-control" id="floatingInput" placeholder="Zip Code">
                    <label for="floatingInput" class="text-muted">Zip Code</label>
                </div>
            </div>
            <div class=" col-md-6 col-sm-12 mb-3">
                <div class="form-floating">
                    <input type="text" class="form-control" id="floatingInput" placeholder="Room">
                    <label for="floatingInput" class="text-muted">Room #/ Suite</label>
                </div>
            </div>
            <div class="col-12">
                <h3>(optional) Upload Photo Or Document</h3>
            </div>
            <div class="col-12">
                <div class="col-12 mb-3 border border-muted d-flex flex-row-reverse p-0 " style="border-radius: 5px;">
                    <input type="file" id="upload" class="bg-info" />
                    <label for="upload" class="text-white  bg-info border border-2 border-info px-3 p-1 mb-0"
                           style="border-radius: 5px;">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                             fill="currentColor" class="bi bi-cloud-upload" viewBox="0 0 16 16">
                            <path fill-rule="evenodd"
                                  d="M4.406 1.342A5.53 5.53 0 0 1 8 0c2.69 0 4.923 2 5.166 4.579C14.758 4.804 16 6.137 16 7.773 16 9.569 14.502 11 12.687 11H10a.5.5 0 0 1 0-1h2.688C13.979 10 15 8.988 15 7.773c0-1.216-1.02-2.228-2.313-2.228h-.5v-.5C12.188 2.825 10.328 1 8 1a4.53 4.53 0 0 0-2.941 1.1c-.757.652-1.153 1.438-1.153 2.055v.448l-.445.049C2.064 4.805 1 5.952 1 7.318 1 8.785 2.23 10 3.781 10H6a.5.5 0 0 1 0 1H3.781C1.708 11 0 9.366 0 7.318c0-1.763 1.266-3.223 2.942-3.593.143-.863.698-1.723 1.464-2.383" />
                            <path fill-rule="evenodd"
                                  d="M7.646 4.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1-.708.708L8.5 5.707V14.5a.5.5 0 0 1-1 0V5.707L5.354 7.854a.5.5 0 1 1-.708-.708z" />
                        </svg><span class="d-lg-inline d-md-inline d-sm-none d-none">Upload</span>
                    </label>
                </div>
            </div>
            <div class="col-12 mb-3 d-flex flex-row-reverse gap-3">
                <button type="button" class="btn btn-outline-info">Cancel</button>
                <button type="button" class="btn btn-info text-white">Submit</button>
            </div>
        </form>
    </div>
    