@model SendEmailModel

<section class="min-vh-100 d-flex justify-content-center ">
    <div class="min-vh-100 mt-4 d-flex flex-column justify-content-between align-items-center">
        <div class="">
            <img src="~/images/logo-PhotoRoom.png-PhotoRoom.png" class="img-fluid" id="logo">
        </div>
        <div>
            
            <h2 class=" text-center py-2 ml-0 pl-0">Reset Your Password</h2>

            <form class="w-100" id="form-login" asp-controller="Login" asp-action="ResetEmail" method="post">
                <div class="form-floating mb-3 w-100 ">
                    <input type="hidden" asp-for="Email"  class="form-control bg-transparent" id="floatingInput"
                           placeholder="Username" required>
                    <label for="floatingInput" class="text-muted"></label>
                </div>
                <div class="form-floating mb-3 w-100">
                    <input  type="password" class="form-control bg-transparent" id="floatingPassword"
                           placeholder="Password">
                    <label for="floatingPassword" class="text-muted">Password</label>
                </div>
                <div class="form-floating mb-3 w-100">
                    <input  type="password" class="form-control bg-transparent" id="floatingPassword"
                           placeholder="ConfirmPassword">
                    <label for="floatingPassword" class="text-muted">ConfirmPassword</label>
                </div>
                <div class="pt-1 my-4">
                    <input type="submit" class="btn btn-info btn-lg btn-block text-white card-text w-100" value="Reset Password">
                </div>
                

            </form>
        </div>
        <div class="d-flex justify-content-around mb-4">
            <a href="#" class="text-decoration-none text-muted">Terms of condition</a>
            <p>&nbsp | &nbsp</p>
            <a href="#" class="text-muted text-decoration-none">Privacy policy</a>
        </div>
    </div>
    <button type="button" class="btn btn-outline-info m-3 " style="position: absolute; top:1rem; right: 1rem;"
            id="theme-button">
        <i class="fa fa-moon-o " aria-hidden="true"></i>
    </button>
</section>